<!-- views/clients.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Клієнти</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body class="body">
    <h1 class="text-center">Список клієнтів</h1>
    <div class="table-responsive">
        <table class="table table-primary table-hover table-sm">
            <tr>
                <th>ID</th>
                <th>Ім'я</th>
                <th>Номер телефону</th>
                <th>Вік</th>
            </tr>

            <!-- Використання EJS для виводу даних про клієнтів -->
            <% for (var i = 0; i < clients.length; i++) { %>
                <tr>
                    <td><%= clients[i].id_client %></td>
                    <td><%= clients[i].client_name %></td>
                    <td><%= clients[i].client_phone %></td>
                    <td><%= clients[i].client_age %></td>

                    <td style="background-color: azure;">
                        <a class="btn btn-danger" href="/api/department/delete/<%= clients[i].id_client %>">Видалити</a>
                    </td>

                    <td style="background-color: azure;">
                        <a class="btn btn-info" href="/api/department/<%= clients[i].id_client %>">Редагувати</a>
                    </td>
                </tr>
            <% } %>
        </table>
    </div>

    <h2 class="text-center">Додати клієнта</h2>

    <form action="department" method="POST" class="text-center">
        <div class="nb-3">
            <label class="form-label">
                ID клієнта
                <input type="number" placeholder="id" class="form-controll" id="Id_client" name="Id_client" min="1">
            </label>

            <label class="form-label">
                Ім'я клієнта
                <input type="text" placeholder="Ім'я" class="form-controll" id="client_name" name="client_name">
            </label>
            
            <label class="form-label">
                Номер телефону
                <input type="number" placeholder="Телефон" class="form-controll" id="client_phone" name="client_phone">
            </label>

            <label class="form-label">
                Вік
                <input type="number" placeholder="Вік" class="form-controll" id="client_age" name="client_age" min="16">
            </label>
        </div>


        <button type="submit" class="btn btn-primary">Додати</button>

    </form>
    
    <a class="btn btn-outline-secondary" href="/" style="margin-left: 50px;">На головну</a>
    <!-- Підключення Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
